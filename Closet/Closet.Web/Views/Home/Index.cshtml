@model List<MemeTopThreeServiceModel>
@{
    ViewData["Title"] = "Home";
}
<div class="row">
    <div class="box">
        <div class="col-lg-12 text-center">
            <div id="closet-top-three" class="carousel slide">
                <!-- Indicators -->
                <ol class="carousel-indicators hidden-xs">
                    <li data-target="#closet-top-three" data-slide-to="0" class="active"></li>
                    <li data-target="#closet-top-three" data-slide-to="1"></li>
                    <li data-target="#closet-top-three" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="item@(i == 0 ? " active" : "")">
                            <img class="img-responsive" src="@Model[i].ImageUrl" alt="">
                        </div>
                    }
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#closet-top-three" data-slide="prev">
                    <span class="icon-prev"></span>
                </a>
                <a class="right carousel-control" href="#closet-top-three" data-slide="next">
                    <span class="icon-next"></span>
                </a>
            </div>
            <h2 class="brand-before">
                <small>Welcome to Team Solaris's Meme Site</small>
            </h2>
            <h1 class="brand-name">Closet</h1>
            <hr class="tagline-divider">
            <h2>
                <small>
                    Created by
                    <strong>Georgi Ivaylov Georgiev</strong>
                </small>
            </h2>
        </div>
        
    </div>
</div>
